---
import Layout from "../../layouts/Layout.astro";
import Content from "../../layouts/Content.astro";
import CardCharacter from "../../components/CardCharacter.astro";
import { getCharacters } from "../../services/database";

const characters = await getCharacters();
---

<Layout title="Lista de personajes">
    <Content>
        <div
            class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 md:grid-cols-3 gap-5 w-full"
        >
            {
                characters.map((item) => (
                    <CardCharacter
                        href={`/characters/${item.id}`}
                        char={item}
                    />
                ))
            }
        </div>
    </Content>
</Layout>

<script is:inline data-astro-rerun="true">
    const cards = document.querySelectorAll("[data-scroll-card]");

    const revealCard = (card) => {
        card.classList.remove("opacity-0", "translate-y-4");
        card.classList.add("opacity-100", "translate-y-0");
    };

    if (window.matchMedia("(prefers-reduced-motion: reduce)").matches) {
        cards.forEach(revealCard);
    } else {
        const observer = new IntersectionObserver(
            (entries, obs) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        revealCard(entry.target);
                        obs.unobserve(entry.target);
                    }
                });
            },
            { threshold: 0.2 }
        );

        cards.forEach((card) => observer.observe(card));
    }
</script>
