---
import Content from "@/layouts/Content.astro";
import Layout from "@/layouts/Layout.astro";
import Chests from "@/components/Chests.astro";
import Oculis from "@/components/Oculis.astro";
import { getStats } from "@/services/json";

const stats = getStats();
const chests = {
    common: stats.common_chests,
    exquisite: stats.exquisite_chests,
    precious: stats.precious_chests,
    luxurious: stats.luxurious_chests,
};

const oculis = {
    anemo: stats.anemoculi,
    geo: stats.geoculi,
    electro: stats.electroculi,
    dendro: stats.dendroculi,
    hydro: stats.hydroculi,
    pyro: stats.pyroculi,
};
---

<Layout title="Estadísticas de Genshin Impact">
    <Content>
        <div class="grid lg:grid-cols-5 gap-4">
            <div
                class="flex flex-col gap-1 justify-between w-full text-[15px] dark:text-white rounded-lg border border-gray-100 bg-white p-4 dark:border-gray-800 dark:bg-gray-900"
            >
                <div class="flex flex-row gap-2 items-center">
                    <svg
                        class="shrink-0"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"
                        ></path><path
                            d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"
                        ></path>
                    </svg>
                    <span>{stats.nickname}</span>
                </div>
                <div class="flex flex-row gap-2 items-center">
                    <svg
                        class="shrink-0"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path
                            d="M6 5h12l3 5l-8.5 9.5a.7 .7 0 0 1 -1 0l-8.5 -9.5l3 -5"
                        ></path><path d="M10 12l-2 -2.2l.6 -1"></path>
                    </svg>
                    <span>Nivel ➜ {stats.level}</span>
                </div>
                <div class="flex flex-row gap-2 items-center">
                    <svg
                        class="shrink-0"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path
                            d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z"
                        ></path><path d="M16 3v4"></path><path d="M8 3v4"
                        ></path><path d="M4 11h16"></path><path d="M7 14h.013"
                        ></path><path d="M10.01 14h.005"></path><path
                            d="M13.01 14h.005"></path><path d="M16.015 14h.005"
                        ></path><path d="M13.015 17h.005"></path><path
                            d="M7.01 17h.005"></path><path d="M10.01 17h.005"
                        ></path>
                    </svg>
                    <span>Días activos ➜ {stats.days_active}</span>
                </div>
                <div class="flex flex-row gap-2 items-center">
                    <svg
                        class="shrink-0"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path d="M12 4v3m-4 -3v6m8 -6v6"></path><path
                            d="M12 18.5l-3 1.5l.5 -3.5l-2 -2l3 -.5l1.5 -3l1.5 3l3 .5l-2 2l.5 3.5z"
                        ></path>
                    </svg>
                    <span>Logros ➜ {stats.achievements}</span>
                </div>
                <div class="flex flex-row gap-2 items-center">
                    <svg
                        class="shrink-0"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path d="M9 7m-4 0a4 4 0 1 0 8 0a4 4 0 1 0 -8 0"
                        ></path><path
                            d="M3 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"
                        ></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path><path
                            d="M21 21v-2a4 4 0 0 0 -3 -3.85"></path>
                    </svg>
                    <span>Personajes ➜ {stats.characters}</span>
                </div>
                <div class="flex flex-row gap-2 items-center">
                    <svg
                        class="shrink-0"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"
                        ></path><path
                            d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z"
                        ></path>
                    </svg>
                    <span>TPs ➜ {stats.unlocked_waypoints}</span>
                </div>
                <div class="flex flex-row gap-2 items-center">
                    <svg
                        class="shrink-0"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path
                            d="M9.225 18.412a1.595 1.595 0 0 1 -1.225 .588c-.468 0 -.914 -.214 -1.225 -.588l-4.361 -5.248a1.844 1.844 0 0 1 0 -2.328l4.361 -5.248a1.595 1.595 0 0 1 1.225 -.588c.468 0 .914 .214 1.225 .588l4.361 5.248a1.844 1.844 0 0 1 0 2.328l-4.361 5.248z"
                        ></path><path
                            d="M17 5l4.586 5.836a1.844 1.844 0 0 1 0 2.328l-4.586 5.836"
                        ></path><path
                            d="M13 5l4.586 5.836a1.844 1.844 0 0 1 0 2.328l-4.586 5.836"
                        ></path>
                    </svg>
                    <span>Dominios ➜ {stats.unlocked_domains}</span>
                </div>
                <div class="flex flex-row gap-2 items-center">
                    <svg
                        class="shrink-0"
                        width="20"
                        height="20"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        fill="none"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        ><path stroke="none" d="M0 0h24v24H0z" fill="none"
                        ></path><path
                            d="M10 12.057a1.9 1.9 0 0 0 .614 .743c1.06 .713 2.472 .112 3.043 -.919c.839 -1.513 -.022 -3.368 -1.525 -4.08c-2 -.95 -4.371 .154 -5.24 2.086c-1.095 2.432 .29 5.248 2.71 6.246c2.931 1.208 6.283 -.418 7.438 -3.255c1.36 -3.343 -.557 -7.134 -3.896 -8.41c-3.855 -1.474 -8.2 .68 -9.636 4.422c-1.63 4.253 .823 9.024 5.082 10.576c4.778 1.74 10.118 -.941 11.833 -5.59a9.354 9.354 0 0 0 .577 -2.813"
                        ></path>
                    </svg>
                    <span>Abismo ➜ {stats.spiral_abyss}</span>
                </div>
            </div>
            <div class="lg:col-span-4">
                <Chests {...chests} />
            </div>
            <div class="col-span-full">
                <Oculis {...oculis} />
            </div>
        </div>
    </Content>
</Layout>
