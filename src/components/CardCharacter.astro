---
import { type Character } from '../types/character'

interface Props {
    href: string
    char: Character
}

const { href, char } = Astro.props
---

<a href={ href } class="transition-all flex flex-col items-center rounded-lg border border-gray-100 bg-white p-6 dark:border-gray-800 dark:bg-gray-900 hover:scale-105">
    <div class="rounded overflow-hidden p-4 text-center">
        <img class="w-auto mx-auto max-h-40 h-40 aspect-square object-contain mb-2 rounded-full" src={ char.icon } alt="" loading="lazy" decoding="async">
        <div>
          <span class="font-semibold text-xl mb-2 text-gray-950 dark:text-white">{ char.name }</span>
        </div>
      </div>
</a>