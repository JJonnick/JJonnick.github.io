---
import { Image } from 'astro:assets'
import { type ImageMetadata } from 'astro'
import CounterNumber from './CounterNumber.astro'

interface Props {
    quantity: number
    image: ImageMetadata
}

const { quantity, image } = Astro.props
---

<article class="rounded-lg border border-gray-100 bg-white p-6 dark:border-gray-800 dark:bg-gray-900 flex flex-col items-center justify-center gap-2">
    <Image src={ image } height={ 80 } width={ 80 } alt="oculi image" />
    <CounterNumber value={quantity} class="text-2xl font-medium text-gray-900 dark:text-white tabular-nums" />
</article>
