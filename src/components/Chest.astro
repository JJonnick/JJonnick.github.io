---
import { Image } from 'astro:assets'
import { type ImageMetadata } from 'astro'

interface Props {
    quantity: number
    image: ImageMetadata
}

const { quantity, image } = Astro.props
---

<article class="rounded-lg border border-gray-100 bg-white p-6 dark:border-gray-800 dark:bg-gray-900">
    <div class="flex items-center justify-between">
        <div>
            <span class="block text-sm text-gray-500 dark:text-gray-400">Cantidad</span>
            <span class="text-2xl font-medium text-gray-900 dark:text-white tabular-nums">{ quantity }</span>
        </div>
    
        <Image src={ image } height={ 80 } width={ 80 } alt="chest image" />
    </div>
</article>
