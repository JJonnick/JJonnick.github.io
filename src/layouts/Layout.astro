---
import { ClientRouter } from "astro:transitions";
import Header from "@/components/Header.astro";
import "@fontsource-variable/comfortaa";
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="dns-prefetch" href="https://enka.network" />
		<link rel="preconnect" href="https://enka.network" crossorigin />
		<title>{title}</title>
		<ClientRouter />
		<script is:inline data-astro-rerun="true">
			(function () {
				try {
					var theme = localStorage.getItem("theme");
					var isDark = false;
					
					if (theme === "dark") {
						isDark = true;
					} else if (theme === "light") {
						isDark = false;
					} else {
						// No saved preference, check system preference
						isDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
					}
					
					if (isDark) {
						document.documentElement.classList.add("dark");
					} else {
						document.documentElement.classList.remove("dark");
					}
				} catch (_) {
					// Fallback when localStorage is not available: respect system preference
					var prefersDark = false;
					try {
						if (window.matchMedia) {
							prefersDark = window
								.matchMedia("(prefers-color-scheme: dark)")
								.matches;
						}
					} catch (_e) {
						// If matchMedia is unavailable or throws, keep default
					}
					
					if (prefersDark) {
						document.documentElement.classList.add("dark");
					} else {
						document.documentElement.classList.remove("dark");
					}
				}
			})();
		</script>
		<slot name="head" />
	</head>
	<body class="relative bg-gray-50 dark:bg-slate-950 min-h-dvh transition-colors">
		<Header />
		<main transition:name="page">
			<slot />
		</main>
		<style is:global>
			:root {
				--accent: 136, 58, 234;
				--accent-light: 224, 204, 250;
				--accent-dark: 49, 10, 101;
				--accent-gradient: linear-gradient(
					45deg,
					rgb(var(--accent)),
					rgb(var(--accent-light)) 30%,
					white 60%
				);
			}
			html {
				font-family: "Comfortaa Variable", system-ui;
			}
			code {
				font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
					DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New,
					monospace;
			}
			::view-transition-old(page),
			::view-transition-new(page) {
				animation-duration: 220ms;
				animation-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
			}
			@media (prefers-reduced-motion: reduce) {
				::view-transition-old(page),
				::view-transition-new(page) {
					animation-duration: 1ms;
				}
			}
		</style>
	</body>
</html>
